<div id="<%= dom_id listing %>">
  <p>
    <strong>Title:</strong>
    <%= listing.title %>
  </p>

  <p>
    <strong>Info:</strong>
    <%= listing.info %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency listing.price, :unit => listing.currency %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= listing.status %>
  </p>

  <% if listing.user == current_user %>
    <%= link_to "Edit Listing", edit_listing_path(listing) %>
  <% else %>
  <p>
    <strong>Seller:</strong>
    <%= listing.user.name %>
  </p>

  <% end %>
</div>
